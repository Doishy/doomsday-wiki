{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "__dirname": false,
    "exports": false,
    "module": false,
    "require": false
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-unused-vars": 1,
    "quotes": ["warn", "single", {"avoidEscape": true}],
    "react/jsx-indent": ["warn", 2],
    "react/jsx-indent-props": ["warn", "first"],
    "react/no-children-prop": 0,
    "react/prop-types": 1,
    "semi": 1
  },
  "settings": {
    "react": {
      "version": "16"
    }
  }
}
